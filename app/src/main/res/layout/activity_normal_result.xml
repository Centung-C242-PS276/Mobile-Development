<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Hasil Klasifikasi -->
    <TextView
        android:id="@+id/textViewResultTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Klasifikasi: NORMAL"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Gambar di tengah halaman -->
    <ImageView
        android:id="@+id/imageViewCenter"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/doctor"
        android:layout_gravity="center"
        android:contentDescription="Gambar Tengah"
        android:layout_marginBottom="16dp" />

    <!-- Keterangan Tambahan -->
    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berdasarkan:\nJenis Kelamin: Perempuan\nUsia: 20 bulan\nTinggi Badan: 80 cm"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="50dp" />/>
</LinearLayout>

