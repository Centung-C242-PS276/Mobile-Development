<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Bagian Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/calculator"
            android:contentDescription="Logo Aplikasi"
            android:layout_marginBottom="16dp" />

        <!-- Bagian Judul Aplikasi -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi Stunting"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Label dan Spinner (Jenis Kelamin) -->
        <TextView
            android:id="@+id/labelGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/gender_array"
            android:layout_marginBottom="16dp" />

        <!-- Label dan Input (Usia) -->
        <TextView
            android:id="@+id/labelUsia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usia (dalam bulan)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextUsia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan usia"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Label dan Input (Tinggi Badan) -->
        <TextView
            android:id="@+id/labelTinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan (cm)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextTinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan tinggi badan"
            android:inputType="numberDecimal"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Hitung -->
        <Button
            android:id="@+id/buttonHitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung" />
    </LinearLayout>
</ScrollView>
