<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar untuk tombol kembali dan judul -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp">

        <!-- Tombol Kembali -->
        <ImageView
            android:id="@+id/buttonBackToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="1dp"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical" />

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klasifikasi"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Hasil klasifikasi -->
    <TextView
        android:id="@+id/textViewResultTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Klasifikasi: NORMAL"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Gambar di tengah halaman -->
    <ImageView
        android:id="@+id/imageViewCenter"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/doctor"
        android:layout_gravity="center"
        android:contentDescription="Gambar Tengah"
        android:layout_marginBottom="16dp" />

    <!-- Keterangan tambahan -->
    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail keterangan akan muncul di sini."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Solusi -->
    <Button
        android:id="@+id/buttonSolusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekomendasi Solusi Penanganan Stunting"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="50dp" />

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="50dp" />
</LinearLayout>