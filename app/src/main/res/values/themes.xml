<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Centung" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--   Start Text Appearance Styles -->
    <style name="Headline.Medium" parent="Theme.Centung">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Headline.Medium.Blue" parent="Headline.Medium">
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="Headline.Medium.White" parent="Headline.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Sub.Headline.Semibold.1" parent="Headline.Medium">
        <item name="fontFamily">@font/league_spartan_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Sub.Headline.Semibold.White.1" parent="Sub.Headline.Semibold.1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Sub.Headline.Semibold.Blue.1" parent="Sub.Headline.Semibold.1">
        <item name="android:textColor">@color/app_blue</item>
    </style>
    <!--   End Text Appearance Styles -->

    <!--    Start Button Appearance Styles-->
    <style name="Button.Rounded" parent="Theme.Centung">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Button.Rounded.1" parent="Button.Rounded">
        <item name="android:layout_marginEnd">76dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">76dp</item>
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!--    End Button Appearance Styles-->
</resources>