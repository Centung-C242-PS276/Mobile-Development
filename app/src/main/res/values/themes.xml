<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Centung" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--   Start Text Appearance Styles -->
    <style name="Headline.Medium" parent="Theme.Centung">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Headline.Medium.Blue" parent="Headline.Medium">
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="Headline.Medium.White" parent="Headline.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Headline.Semibold" parent="Headline.Medium">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Headline.Semibold.Black" parent="Headline.Semibold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Sub.Headline.Semibold.1" parent="Headline.Medium">
        <item name="fontFamily">@font/league_spartan_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Sub.Headline.Semibold.White.1" parent="Sub.Headline.Semibold.1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Sub.Headline.Semibold.Blue.1" parent="Sub.Headline.Semibold.1">
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="Headline.Toolbar" parent="Sub.Headline.Semibold.Blue.1">
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Sub.Headline.Regular.2" parent="Headline.Medium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Sub.Headline.Regular.Grey.2" parent="Sub.Headline.Regular.2">
        <item name="android:textColor">@color/app_grey</item>
    </style>

    <style name="Sub.Headline.Regular.Small.Grey.2" parent="Sub.Headline.Regular.2">
        <item name="android:textColor">@color/app_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body.Light.1" parent="Headline.Medium">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Light.2" parent="Body.Light.1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <!--   End Text Appearance Styles -->

    <!--    Start Button Appearance Styles-->
    <style name="Button.Rounded" parent="Theme.Centung">
        <item name="android:layout_width">match_parent</item>
        <!--        <item name="android:stateListAnimator">@null</item> Removed drop shadow effect from Material Button -->
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Button.Rounded.1" parent="Button.Rounded">
        <item name="android:layout_marginEnd">76dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">76dp</item>
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button.Rounded.Medium" parent="Button.Rounded">
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">22.5dp</item>
        <item name="android:layout_marginEnd">22.5dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Rounded.Medium.Blue" parent="Button.Rounded.Medium">
        <item name="backgroundTint">@color/app_blue</item>
    </style>

    <!--    End Button Appearance Styles-->
    <style name="ShapeAppearance.MaterialComponents.Card.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>